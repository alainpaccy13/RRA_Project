  return (
    <div className="w-full max-w-5xl mx-auto space-y-8 py-6">
      <div>
        <h1 className="text-3xl font-bold text-gray-900">{taxTypeName}</h1>
        <p className="text-lg text-gray-500 mt-1">Appeal Point Details</p>
      </div>

      <Card>
